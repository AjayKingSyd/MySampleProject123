#!groovy
pipeline {
	agent none
  stages {
        stage("SCM Checkout"){
            steps{
            git 'https://gitlab.com/Edeepika/sample-projects.git'
            }
  	stage('Maven Install') {
    	agent {
      	docker {
        	image 'maven:3.5.0'
        }
      }
      steps {
      	sh 'mvn clean install'
      }
    }
    stage('Docker Build') {
    	agent any
      steps {
      	sh 'docker build -t shanem/spring-petclinic:latest .'
      }
    }
  }
}
